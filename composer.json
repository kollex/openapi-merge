{
    "name": "marcelthole/openapi-merge",
    "description": "Merge multiple OpenAPI YML/JSON files into one",
    "type": "application",
    "keywords": [
        "openapi",
        "merge"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Marcel Thole",
            "role": "Creator"
        }
    ],
    "require": {
        "php": ">= 8.1",
        "cebe/php-openapi": "^1.7.0",
        "symfony/console": "^6.3"
    },
    "require-dev": {
        "doctrine/coding-standard": "^12.0.0",
        "friendsofphp/php-cs-fixer": "^3.22",
        "infection/infection": "^0.27.0",
        "phpstan/phpstan": "^1.10.26",
        "phpstan/phpstan-phpunit": "^1.3.13",
        "phpunit/phpunit": "^10.2.6",
        "rector/rector": "^0.17.7",
        "roave/security-advisories": "dev-master",
        "slevomat/coding-standard": "^8.13.3",
        "squizlabs/php_codesniffer": "3.7.2"
    },
    "autoload": {
        "psr-4": {
            "Mthole\\OpenApiMerge\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mthole\\OpenApiMerge\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": [
            "@phpstan",
            "@phpcs",
            "@cs",
            "@phpunit"
        ],
        "test-coverage": [
            "@phpunit-coverage",
            "@infection"
        ],
        "fix": [
            "@phpcbf",
            "@cs-fix"
        ],
        "phpstan": "vendor/bin/phpstan analyse",
        "phpcs": "vendor/bin/phpcs",
        "phpcbf": "vendor/bin/phpcbf",
        "cs": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --verbose --diff --dry-run",
        "cs-fix": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --verbose --diff",
        "phpunit": "@php -dzend.assertions=1 ./vendor/bin/phpunit --no-coverage",
        "phpunit-coverage": "@php -dxdebug.mode=coverage -dzend.assertions=1 ./vendor/bin/phpunit",
        "infection": "infection --threads=4 --coverage=build/coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "infection/extension-installer": true
        }
    },
    "bin": [
        "bin/openapi-merge"
    ]
}
